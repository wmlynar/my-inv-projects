{
  appName: "seal-example",
  entry: "src/index.js",
  defaultTarget: "local",
  build: {
    // Thin packager (AIO) requires zstd + C compiler + libzstd-dev on build machine.
    packager: "thin",
    obfuscationProfile: "balanced",
    frontendObfuscation: { enabled: true, profile: "balanced" },
    hardening: {
      enabled: true,
      // SEA: pack main bundle into compressed loader (no plain JS inside SEA blob)
      seaMainPacking: true,
      seaMainPackingMethod: "brotli",
      seaMainPackingChunkSize: 8000,

      // Fallback: hide app.bundle.cjs behind gzip + loader
      bundlePacking: true,

      // Binary repack is experimental for postject-ed SEA binaries; OFF by default.
      strip: false,
      upx: false,
    },
    includeDirs: ["public", "data"],
    keepLocalOut: true,
  },
}
