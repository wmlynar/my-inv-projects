{
  "session": {
    "name": "robokit_all",
    "description": "Capture RoboKit TCP ports plus HTTP.",
    "targetKind": "robot",
    "operator": "automation",
    "rootDir": "~/robokit_logs"
  },
  "limits": {
    "warnSessionSizeGb": 5,
    "rotateFileMb": 512,
    "noThrottling": true,
    "captureRawBytes": false,
    "captureFrames": true,
    "includeRawFrameBase64": false,
    "includeBinaryTailBase64": false,
    "hexPreviewBytes": 0,
    "httpCaptureBodies": true
  },
  "capture": {
    "omitLasers": false,
    "omitPointCloud": false,
    "rawFrameBase64Apis": []
  },
  "listeners": [
    {
      "name": "robod",
      "protocol": "tcp",
      "listen": { "host": "0.0.0.0", "port": 19200 },
      "upstream": { "host": "10.0.0.11", "port": 19200 },
      "decode": { "kind": "robocore" }
    },
    {
      "name": "state",
      "protocol": "tcp",
      "listen": { "host": "0.0.0.0", "port": 19204 },
      "upstream": { "host": "10.0.0.11", "port": 19204 },
      "decode": { "kind": "robocore" }
    },
    {
