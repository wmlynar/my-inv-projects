{
  // Host/IP to bind listeners
  "bindHost": "0.0.0.0",

  // Log directory (relative to this file)
  "logDir": "./logs",

  // ASCII preview length per chunk
  "asciiPreviewLimit": 160,

  // Log options
  "logBinary": true,
  "logBase64": true,
  "logAscii": true,
  "logSha256": false,
  "splitLogs": false,

  // Throttle logs per API number (avoid disk spam)
  "throttle": {
    "enabled": true,
    "maxPerApi": 100,
    "directions": ["c2s"],
    "logSuppressed": true,
    "excludeApis": [],
    "maxBodyLength": 1048576
  },

