{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Documentation Front Matter",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "id",
    "title",
    "area",
    "status",
    "source",
    "version",
    "last_verified"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "area": {
      "type": "string",
      "enum": [
        "project",
        "robokit",
        "seer",
        "examples",
        "scraping",
        "policy"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "verified"
      ]
    },
    "source": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "last_verified": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "related": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
